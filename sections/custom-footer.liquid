<style>
  .neo-footer {
    background-color: #d8abab;
    color: #ffffff;
    padding: 50px 0 20px;
  }

  .neo-footer a {
    color: #ffffff;
    text-decoration: none;
  }

  .neo-footer a:hover {
    text-decoration: underline;
  }

  .neo-footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
  }

  @media screen and (min-width: 750px) {
    .neo-footer__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 30px;
    }
  }

  .neo-footer__logo-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .neo-footer__logo-section {
      align-items: flex-start;
      text-align: left;
    }
  }

  .neo-footer__logo-wrapper {
    margin-bottom: 15px;
  }

  .neo-footer__logo {
    max-width: 160px;
  }

  .neo-footer__brand-name {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .neo-footer__social {
    display: flex;
    gap: 15px;
    margin-top: 15px;
  }

  .neo-footer__social-icon {
    width: 24px;
    height: 24px;
  }

  .neo-footer__heading {
    font-size: 1.2rem;
    margin-bottom: 15px;
    font-weight: 600;
  }

  .neo-footer__menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .neo-footer__menu-item {
    margin-bottom: 12px;
  }

  .neo-footer__newsletter-form {
    margin-top: 15px;
  }

  .neo-footer__newsletter-field {
    display: flex;
    max-width: 100%;
  }

  .neo-footer__newsletter-input {
    flex-grow: 1;
    border: none;
    padding: 12px 15px;
    border-radius: 4px 0 0 4px;
    font-size: 1rem;
  }

  .neo-footer__newsletter-button {
    background-color: #7095ab;
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
    font-size: 1rem;
  }

  .neo-footer__copyright {
    text-align: center;
    margin-top: 40px;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    font-size: 0.9rem;
  }

  .neo-footer__section {
    margin-bottom: 2.5rem;
  }

  .neo-footer__menu-title {
    margin-top: 0;
    margin-bottom: 1.2rem;
    font-weight: 600;
  }

  @media screen and (min-width: 750px) {
    .neo-footer__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 40px;
    }
  }

  @media screen and (max-width: 749px) {
    .neo-footer__grid {
      grid-template-columns: 1fr;
      gap: 35px;
      padding: 0 20px;
    }

    .neo-footer {
      padding: 40px 0 20px;
    }

    .neo-footer__section {
      margin-bottom: 0;
    }
  }
</style>

<footer class="neo-footer">
  <div class="page-width">
    <div class="neo-footer__grid">
      <div class="neo-footer__section">
        {% if section.settings.logo != blank %}
          <div class="neo-footer__logo-wrapper">
            {{
              section.settings.logo
              | image_url: width: 140
              | image_tag: class: 'neo-footer__logo', loading: 'lazy', width: 140, alt: shop.name
            }}
          </div>
        {% else %}
          <div class="neo-footer__logo-wrapper">
            <div class="neo-footer__brand-name">@NEOTHESHOP</div>
          </div>
        {% endif %}

        <div class="neo-footer__social-list">
          {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" class="neo-footer__social-link" aria-label="Facebook">
              {% render 'icon-facebook' %}
            </a>
          {% endif %}

          {% if settings.social_instagram_link != blank %}
            <a href="{{ settings.social_instagram_link }}" class="neo-footer__social-link" aria-label="Instagram">
              {% render 'icon-instagram' %}
            </a>
          {% endif %}

          {% if settings.social_twitter_link != blank %}
            <a href="{{ settings.social_twitter_link }}" class="neo-footer__social-link" aria-label="Twitter">
              {% render 'icon-twitter' %}
            </a>
          {% endif %}

          {% if settings.social_youtube_link != blank %}
            <a href="{{ settings.social_youtube_link }}" class="neo-footer__social-link" aria-label="YouTube">
              {% render 'icon-youtube' %}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="neo-footer__section">
        <h2 class="neo-footer__menu-title" data-toggle-menu>{{ section.settings.menu_heading_1 }}</h2>
        {% if section.settings.footer_menu_1 != blank %}
          <ul class="neo-footer__menu-list">
            {% for link in section.settings.footer_menu_1.links %}
              <li class="neo-footer__menu-item">
                <a href="{{ link.url }}" class="neo-footer__menu-link">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <div class="neo-footer__section">
        <h2 class="neo-footer__menu-title" data-toggle-menu>{{ section.settings.menu_heading_2 }}</h2>
        {% if section.settings.footer_menu_2 != blank %}
          <ul class="neo-footer__menu-list">
            {% for link in section.settings.footer_menu_2.links %}
              <li class="neo-footer__menu-item">
                <a href="{{ link.url }}" class="neo-footer__menu-link">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <div class="neo-footer__section">
        <h2 class="neo-footer__menu-title" data-toggle-menu>{{ section.settings.menu_heading_3 }}</h2>
        {% if section.settings.footer_menu_3 != blank %}
          <ul class="neo-footer__menu-list">
            {% for link in section.settings.footer_menu_3.links %}
              <li class="neo-footer__menu-item">
                <a href="{{ link.url }}" class="neo-footer__menu-link">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <div class="neo-footer__newsletter-section">
        <h3 class="neo-footer__heading">{{ section.settings.newsletter_heading }}</h3>

        {% if section.settings.newsletter_text != blank %}
          <p>{{ section.settings.newsletter_text }}</p>
        {% endif %}

        {% form 'customer', id: 'ContactFooter', class: 'neo-footer__newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="neo-footer__newsletter-field">
            <input
              type="email"
              name="contact[email]"
              id="ContactFooter-email"
              class="neo-footer__newsletter-input"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              placeholder="{{ section.settings.newsletter_placeholder }}"
              required
            >
            <button type="submit" class="neo-footer__newsletter-button" name="commit">
              {{ section.settings.newsletter_button_text }}
            </button>
          </div>
          {%- if form.errors -%}
            <div style="color: red; margin-top: 10px;">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          {%- if form.posted_successfully? -%}
            <div style="color: white; margin-top: 10px;">
              {{ 'newsletter.success' | t }}
            </div>
          {%- endif -%}
        {% endform %}
      </div>
    </div>

    <div class="neo-footer__bottom">
      <p>
        Â© {{ 'now' | date: '%Y' }}
        {{ shop.name }}. All rights reserved.
      </p>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Add toggle functionality for mobile menu sections
      const toggleButtons = document.querySelectorAll('[data-toggle-menu]');

      toggleButtons.forEach((button) => {
        button.addEventListener('click', function () {
          if (window.innerWidth <= 749) {
            this.classList.toggle('open');
          }
        });
      });
    });
  </script>
</footer>

